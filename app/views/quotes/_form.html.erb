<%= simple_form_for(@quote, html: {class: "form-group"}) do |f| %>
  <%= f.error_notification %>


<div class ="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title text-center">CONTACT INFORMATION</h3>
      </div>
      <div class="panel-body">
        <%= f.input :first_name, required: true, label: false, placeholder: "First name", input_html: {class: "form-control"} %>
        <%= f.input :last_name, required: true, label: false, placeholder: "Last name", input_html: {class: "form-control"} %>
        <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
        <%= f.input :phone, required: true, label: false, placeholder: "Phone", input_html: {class: "form-control"} %>
        <%= f.input :pick_up_date, as: :date_picker, :label => "Requested pick-up date", :input_html => { :value => Date.today} %>
      </div>
    </div>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title text-center">DELIVERY INFORMATION</h3>
      </div>
      <div class="panel-body">
        <%= f.input :origin_city, required: true, label: false, placeholder: "Origin city", input_html: {class: "form-control"} %>
        <%= f.input :origin_state, required: true, label: false, placeholder: "Origin state", input_html: {class: "form-control"} %>
        <%= f.input :origin_zip, required: true, label: false, placeholder: "Origin zip code", input_html: {class: "form-control"} %>
        <%= f.input :destination_city, required: true, label: false, placeholder: "Destination city", input_html: {class: "form-control"} %>
        <%= f.input :destination_state, required: true, label: false, placeholder: "Destination state", input_html: {class: "form-control"} %>
        <%= f.input :destination_zip, required: true, label: false, placeholder: "Destination zip code", input_html: {class: "form-control"} %>
      </div>
    </div>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title text-center">VEHICLE INFORMATION</h3>
      </div>
      <div class="panel-body">
        <%= f.input :year, label: false, collection: 2016.downto(1900), prompt: 'Select year', :input_html => { :class => ""} %>
        <%= f.input :make, required: true, label: false, placeholder: "Make", input_html: {class: "form-control"} %>
        <%= f.input :model, required: true, label: false, placeholder: "Model", input_html: {class: "form-control"} %>
        <p><strong>Does this vehicle run?</strong></p><%= f.collection_radio_buttons :is_operable, [[true, 'Yes'] ,[false, 'No']], :first, :last, :checked => true, required: true, :label => "Does it run", input_html: {class: "form-control"} %>
        <%= f.input :description, label: false, placeholder: "Enter details", input_html: {class: "form-control"} %>
      </div>
    </div>
      <%= f.button :submit, "SEND QUOTE REQUEST", class: "btn btn-success btn-block" %>
  </div>
</div>
<% end %>
